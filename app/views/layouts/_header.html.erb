<div id="header" class="fixed">
    <nav class="top-bar" data-topbar>
        <ul class="title-area">
            <li class="name">
                <h1><a href="/">
                    <img src="/murly.png" style="width: 50px" alt=""/>
                    murl.<span>ml</span>
                </a></h1>
            </li>
        </ul>
        <section class="top-bar-section">
            <ul class="nav right">
                <% if current_user.nil? %>
                    <%= form_for(:user, :url => session_path(:user)) do |f| %>
                    <li>
                        <%= f.email_field :email, :autofocus => true, :placeholder => 'E-Mail' %>
                    </li>
                    <li>
                        <%= f.password_field :password, :placeholder => 'Password' %>
                    </li>
                    <li><%= f.submit "Sign in", class: "button right tiny" %></li>
                    <% end %>
                <% else %>
                    <li style="margin-right: 10px; font-size: 12px; color: #ddd; line-height: 45px; float: left"><%= current_user.email unless current_user.nil? %></li>
                    <li><%= link_to "My Account", member_urls_path %></li>
                <% end %>
            </ul>
        </section>
    </nav>
</div>