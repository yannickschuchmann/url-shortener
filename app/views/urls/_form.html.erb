<%= form_for @url, :html => {:class => 'pure-form'} do |f| %>
    <fieldset>
        <legend>Create your tiny URL!</legend>
        <% if @url and @url.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@url.errors.count, "error") %> prohibited
                    this url from being saved:</h2>
                <ul>
                    <% @url.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <%= f.hidden_field :user_id, value: if current_user then current_user.id end %>
        <%= f.text_field :ref, :placeholder => "http://" %>
        <%= content_tag :button, :type => :submit, :class => 'pure-button pure-button-primary' do %>
            Generate
        <% end %>

    </fieldset>
<% end %>